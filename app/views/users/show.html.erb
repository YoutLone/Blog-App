<div class="container mt-5">
  <div class="row">
    <div class="col-3">
      <div class="card border-2 border-dark">
        <img src="<%= @user.photo %>" alt="user" style="height: 100px;" />
      </div>
    </div>

    <div class="col-9">
      <div class="card border-2 border-dark">
      <div class="card-body">
      <div class="card-title">
        <h3 class="m-0"><b><%= @user.name %></b></h3>
      </div>
      <div class="d-flex h-50 justify-content-end align-items-end">
        <p class="m-0">Number of posts: <%= @user.posts_counter %></p>
      </div>
    </div>
      </div>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="card border-2 border-dark">
    <div class="card-body">
      <h4>Bio</h4>
      <p class="m-0"><%= @user.bio %></p>
    </div>
  </div>
</div>


<div class="container mt-5">
<h4>Recent Posts</h4>
  <% @posts.each do |post| %>
    <div class="card border-2 border-dark mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= post.title %></h5>
        <p class="card-text"><%= post.text %></p>
        <div class="d-flex gap-1 justify-content-end">
          <p class="m-0">Comments: <%= post.comment_counter %>,</p>
          <p class="m-0">Likes: <%= post.likes_counter %></p>
      </div>
      </div>
    </div>
  <% end %>
</div>
